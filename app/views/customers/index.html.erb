<p style="color: green"><%= notice %></p>

<div class="container">
<div class="row">
  <div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-header">
        <%= link_to "Agregar cliente", new_customer_path, class:"btn btn-primary float-end" %>
        <h4 class="card-title">Cliente</h4>
      </div>
      <div class="card-body">
        <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>dni</th>
              <th>Nombre</th>
              <th>telefono</th>
              <th>birthday</th>
              <th>email</th>
              <th> opciones</th>

            </tr>
          </thead>
          <tbody>
  <% @customers.each do |customer| %>
    <tr class="align-middle">
            <td> <%= customer.dni %> </td>
            <td> <%= customer.full_name %></td>
            <td> <%= customer.telephone%></td>
            <td> <%= customer.birthday%></td>
            <td> <%= customer.email%></td>
            <td> 
              <button type="button" class="btn btn-info">
              <%= link_to "", edit_customer_path(customer), class:"bi bi-pencil text-white" %> 
              </button>
              <button type="button" class="btn btn-warning">
              <%= link_to "", edit_customer_path(customer), class:"bi bi-plug text-white" %> 
              </button>
              <button type="button" class="btn btn-danger">
              <%= link_to "", edit_customer_path(customer), class:"bi bi-trash text-white" %> 
              </button>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
