<%= render "layouts/sidenav" %>

<div id="businesses">
  <% if current_user.business %>
    <%= render current_user.business %>
  <% else %>
  <div class="px-4 py-5 my-5 text-center">
    <%= image_tag( "https://img.icons8.com/external-flaticons-lineal-color-flat-icons/64/000000/external-beauty-salon-pet-grooming-flaticons-lineal-color-flat-icons.png") -%>
