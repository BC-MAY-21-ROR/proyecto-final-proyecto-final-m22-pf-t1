<div class="container">
  <div id="<%= dom_id business %>">
    <div class="card" style="width: 18rem;">
      <div class="card-header">
        <h4 class="card-title">Mi negocio</h4>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <strong>Nombre:</strong>
          <%= business.name %>
        </li>
        <li class="list-group-item">
        <strong>NIT:</strong>
        <%= business.nit %>
        </li>
        <li class="list-group-item">
        <strong>País:</strong>
          <%= business.country %>
        </li>
        <li class="list-group-item">
        <strong>Ciudad:</strong>
          <%= business.city %>
        </li>
        <li class="list-group-item">
        <strong>Teléfono:</strong>
          <%= business.telephone %>
        </li>
        <li class="list-group-item">
        <strong>Email:</strong>
          <%= business.email %>
        </li>
        <li class="list-group-item">
        <strong>Usuario:</strong>
          <%= business.user_id %>
        </li>
      </ul>
      <div class="card-footer">
        <% if current_user.business.id.nil? %>
          <%= link_to "New business", new_business_path, class:"btn btn-primary" %>
        <% else %>
          <%= link_to "Editar negocio", edit_business_path(business), class:"btn btn-primary" %> 
        <% end %>
      </div>
    </div>
  </div>
</div>