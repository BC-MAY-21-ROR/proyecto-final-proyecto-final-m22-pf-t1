<div class="bg-primary">
        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-7">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Usuario</h3></div>
                                    <div class="card-body">
                                        <section>
                                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                            <div class="form-floating mb-3">
                                                <%= f.label :email, "Correo electronico", class:"col-auto" %><br />
                                                  <%= f.email_field :email, autofocus: true, autocomplete: "Correo electronico", class:"form-control" %>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <%= f.label :password, "Contraseña", class:"col-auto" %>
                                                        <% if @minimum_password_length %>
                                                        <em>(Ingrese minimo <%= @minimum_password_length %> caracteres)</em>
                                                        <% end %><br />
                                                        <%= f.password_field :password, autocomplete: "Contraseña", class:"form-control" %>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <%= f.label :password_confirmation, "Confirmar contraseña", class:"col-auto" %><br />
                                                          <%= f.password_field :password, autocomplete: "Confirmar contraseña", class:"form-control" %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="mt-4 mb-0">
                                                <div class="d-grid"><a><%= f.submit "Registrar usuario", class:"btn btn-primary d-block w-100 mt-3" %></a></div>
                                            </div>
                                            <% end %>
                                        </section>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a><%= link_to "Ya tienes una cuenta?, Inicia sesion aquí", user_session_path, method: :get, class:"col-auto fs--1 text-600 mb-0 undefined" %></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; SERENITY 2022</div>
                            <div>
                                <a href="#">Politicas de privacidad</a>
                                &middot;
                                <a href="#">Terminos &amp; Condiciones</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
</div>
