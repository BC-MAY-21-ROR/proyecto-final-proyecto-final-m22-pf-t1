<div class="container">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-lg-4">
      <div class="card card-body text-center p-4 p-sm-5">
        <h1 class="mb-2">Login</h1>
        <p class="my-3">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %> </p>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }, class:"mt-sm-4") do |f| %>
          <div class="mb-3 input-group-lg">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Enter your email"%>
          </div>
          <div class="mb-3 position-relative">
            <div class="input-group input-group-lg">
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Enter your password" %>
            </div>
          </div>
          <div class="mb-3 d-sm-flex justify-content-between">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, class:"form-check-input" %>
                <%= f.label :remember_me, class:"form-check-label" %>
              </div>
            <% end %>
            
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end %>
          </div>
          <div class="actions d-grid">
            <%= f.submit "Log in", class:"btn btn-lg btn-primary" %>
          </div>
        <% end %>
        <p class="mb-0 mt-3">Â©2022 <a target="_blank" href="#">Serenity</a> All rights reserved</p>
      </div>
    </div>
  </div>
</div>

