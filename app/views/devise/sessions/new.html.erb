
<div class="bg-primary">
  <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header"><h3 class="text-center font-weight-light my-4">Iniciar sesion</h3></div>
                                    <div class="card-body">
                                        <section>
                                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                            <div class="form-floating mb-3">
                                                <%= f.label :email, "Correo Electronico", class:"col-auto" %><br /><br />
                                                    <%= f.email_field :email, autofocus: true, autocomplete: "Correo electronico", class:"form-control" %>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <%= f.label :password, "Contraseña", class:"col-auto" %><br /><br />
                                                  <%= f.password_field :password, autocomplete: "Contraseña", class:"form-control" %>
                                            </div>
                                            <div class="form-check mb-3">
                                                <%= f.check_box :remember_me %>
                                                  <%= f.label :remember_me, "Recordar usuario" %>
                                            </div>
                                            
                                              <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                  <a><%= link_to "Olvido su contraseña?", new_user_password_path, method: :get, class:"col-auto fs--1 text-600 mb-0 undefined" %></a>
                                                  
                                                  <a><%= f.submit "Iniciar Sesion", class:"btn btn-primary d-block w-100 mt-3" %></a>
                                                  <% end %>
                                              </div>
                                        </section>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a><%= link_to "Registrarse", new_user_registration_path, method: :get, class:"col-auto fs--1 text-600 mb-0 undefined" %></a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <div id="layoutAuthentication_footer">
                <footer class="py-4 bg-light mt-auto">
                    <div class="container-fluid px-4">
                        <div class="d-flex align-items-center justify-content-between small">
                            <div class="text-muted">Copyright &copy; SERENITY 2022</div>
                            <div>
                                <a href="#">Politicas de privacidad</a>
                                &middot;
                                <a href="#">Terminos &amp; Condiciones</a>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/scripts.js"></script>
</div>
