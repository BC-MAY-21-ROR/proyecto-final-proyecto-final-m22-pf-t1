
<div class="container col-lg-5">
  <div class="shadow mt-5 mb-4">
    <div class="row d-flex align-items-center justify-content-center">
      <div class="">
        <div class="card card-body text-center p-4 p-sm-5">
          <h1 class="mb-3">Recuperar Contraseña</h1>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }, class:"mt-sm-4") do |f| %>
            <div class="mb-3 input-group-lg">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Ingresa tu correo electronico"%>
            </div>
            <div class="actions d-grid">
              <%= f.submit "Enviarme instrucciones para recuperar mi contraseña", class:"btn btn-lg btn-primary" %>
            </div>
            <div class="mb-1 mt-5">
              <%= link_to "Volver al Inicio", user_session_path, class:"btn btn-primary" %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
<footer class="text-center text-white fixed-bottom" style="background-color: #D3D3D3;">
  <div class="text-center text-black p-3" style="background-color: rgba(229, 229, 229);">
    © 2022 Copyright:
    <a class="text-black" href="https://google.com/">Serenity.com</a>
  </div>
</footer>
