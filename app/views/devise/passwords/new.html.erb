<div class="container">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-lg-5">
      <div class="card card-body text-center p-4 p-sm-5 mt-5">
        <h1 class="mb-2">Forgot your password?</h1>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3 input-group-lg">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Enter your email" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class:"btn btn-lg btn-primary" %>
          </div>
        <% end %>
        <div class="mb-3 input-group-lg">
        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>