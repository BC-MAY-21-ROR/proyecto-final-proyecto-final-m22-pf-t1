<div class="container">
  <div class="row d-flex align-items-center justify-content-center">
    <div class="col-lg-5">
      <div class="card card-body text-center p-4 p-sm-5 mt-5">
        <h2 class="mb-3">Cambiar contraseña</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.label :password, "Nueva contraseña" %><br />
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "Nueva contraseña" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "Nueva contraseña" %>
          </div>

          <div class="actions">
            <%= f.submit "Cambiar mi contraseña" %>
          </div>
        <% end %>

        <%= link_to "Volver al inicio", new_user_session_path, class:"btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>