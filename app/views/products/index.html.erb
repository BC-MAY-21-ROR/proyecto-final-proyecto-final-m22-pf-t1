<div class="container">
<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
      <div class="card-header">
        <%= link_to "Agregar Producto", new_product_path, class:"btn btn-primary float-end" %>
        <h4 class="card-title">Productos</h4>
      </div>
			<div class="card-body">
				<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Referencia</th>
							<th>Nombre</th>
							<th>Descripci√≥n</th>
							<th>Precio</th>
							<th>Activado</th>
							<th>Canon</th>
							<th>category_id</th>
						</tr>
					</thead>
					<tbody>
					<%  @products.each do |product| %>
					<tr class="align-middle">
						<td class="py-1"><%= product.reference %> </td>
						<td> <%= product.name %></td>
						<td> <%= product.description %> </td>
						<td> <%= product.price %></td>
						<td> <%= product.actived %></td>
						<td> <%= product.cannon %></td>
						<td> <%= product.category_id %></td>
						<td> 
              <button type="button" class="btn btn-info">
							<%= link_to "", edit_product_path(product), class:"bi bi-pencil text-white" %> 
              </button>
              <button type="button" class="btn btn-warning">
							<%= link_to "", edit_product_path(product), class:"bi bi-plug text-white" %> 
              </button>
              <button type="button" class="btn btn-danger">
							<%= link_to "", edit_product_path(product), class:"bi bi-trash text-white" %> 
              </button>
            </td>
					</tr>
				<% end %>

				</tbody>
			</table>
		</div>
	</div>
</div>
</div>