<div class="container">
<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
      <div class="card-header">
        <%= link_to "Agregar Producto", new_product_path, class:"btn btn-primary float-end"  %>
        <h4 class="card-title">Productos</h4>
      </div>
			<div class="card-body">
				<div class="table-responsive">
				<table class="table table-striped table-hover"
					<thead>
						<tr>
							<th>Referencia</th>
							<th>Nombre</th>
							<th>Descripci√≥n</th>
							<th>Precio</th>
							<th>Activado</th>
							<th>Canon</th>
							<th>category_id</th>
						</tr>
					</thead>
					<tbody>
					<%  @products.each do |product| %>
					<tr class="align-middle">
						<td class="py-1"><%= product.reference %> </td>
						<td> <%= product.name %></td>
						<td> <%= product.description %> </td>
						<td> <%= product.price %></td>
						<td> <%= product.actived %></td>
						<td> <%= product.cannon %></td>
						<td> <%= product.category_id %></td>
						<td> 
              <button type="button" class="btn btn-info">
							<%= link_to "", edit_product_path(product), class:"bi bi-pencil text-white" %> 
              </button>
              <button type="button" class="btn btn-warning">
							<%= link_to "", edit_product_path(product), class:"bi bi-plug text-white" %> 
              </button>
              <button type="button" class="btn btn-danger">
							<%= link_to "", edit_product_path(product), class:"bi bi-trash text-white" %> 
              </button>
            </td>
					</tr>
				<% end %>

				</tbody>
			</table>
		</div>
	</div>
</div>
</div>


<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
  Agregar nuevo producto
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Nuevo producto</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>
