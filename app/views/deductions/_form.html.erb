<%= form_with(model: deduction) do |form| %>
  <% if deduction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(deduction.errors.count, "error") %> prohibited this deduction from being saved:</h2>

      <ul>
        <% deduction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date, value: DateTime.now.strftime("%Y-%m-%dT%T") %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount, step: 1000 %>
  </div>

  <div>
    <%= form.label :stylist_id, style: "display: block" %>
    <%= form.collection_select :stylist_id, Stylist.order(:name), :id, :name %>

    <%# form.text_field :stylist_id %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, ["CxC", "Descontado"] %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
