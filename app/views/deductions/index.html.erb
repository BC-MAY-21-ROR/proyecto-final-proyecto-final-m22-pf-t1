<div id="deductions" class="container">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-header">
					<%= link_to "Agregar Deducción", new_deduction_path, class:"btn btn-primary float-end" %>
					<h4 class="card-title">Deduccciones</h4>
				</div>
				<div class="card-body">
					<div class="table-responsive">
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>Fecha</th>
								<th>Valor</th>
								<th>Estilista</th>
								<th>Descripción</th>
								<th>Estado</th>
								<th>Opciones</th>
							</tr>
						</thead>
						<tbody>

						<%  @deductions.each do |deduction| %>
						<tr class="align-middle">
							<td class="py-1"> <%= deduction.date.strftime("%F %T") %> </td>
							<td> <%= deduction.amount %></td>
							<td> <%= deduction.stylist.name %> </td>
							<td> <%= deduction.description %></td>
							<td> <%= deduction.status %></td>
							<td> 
								<button type="button" class="btn btn-info">
								<%= link_to "", edit_deduction_path(deduction), class:"bi bi-pencil text-white" %> 
								</button>
								<button type="button" class="btn btn-danger">
								<%= link_to "", deduction_path(deduction),  data: {turbo_method: :delete, 
								turbo_confirm: "Are you sure?" }, class:"bi bi-trash text-white" %> 
								</button>
							</td>
						</tr>
					<% end %>

					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
