<%= render "form_search_product" %>

<%= form_with(model: [@invoice, order_item]) do |form| %>
  <% if order_item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(order_item.errors.count, "error") %> No se puede guardar este art√≠culo: </h2>

      <ul>
        <% order_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <% @product_data %>
  </div>

  <div>
    <%= form.label  :name, style: "display: block" %>
    <%if @product_data%>
    <%= form.collection_select :product_id, @product_data.order(:name), :id, :name %>
    <% end %>
  </div>

  <div>
    <%= form.label :quantity, style: "display: block" %>
    <%= form.number_field :quantity, min: 1, class:"form-control" %>
  </div>

  <div>
    <%= form.label :adjustment, style: "display: block" %>
    <%= form.number_field :adjustment %>
  </div>

  <div>
     <%= form.label :stylist_id, style: "display: block" %>
      <%= form.collection_select :stylist_id, Stylist.order(:name), :id, :name %>
  </div>
 
  <div class="d-grid gap-2">
    <br>
    <%=form.submit class:"btn btn-primary float-end"%>
    <br>
  </div>
<% end %>
