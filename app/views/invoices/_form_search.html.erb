<div class="card col-lg-8 justify-content-center">
  <div class="card-header">
    Buscar cliente
  </div>
  <div class="card-body">
    <%= form_with url: "/invoices/new", method: :get do |form|  %>
    <div class="row mb-3">
      <%= form.label :query, "Cliente", class:"col-sm-3 col-form-label" %>
      <div class="col-sm-9">
      <%= form.text_field :query,  class: 'form-control ', placeholder: "Nombre completo รณ dni" %>
    </div>
    <div>
    <%= form.submit "Buscar", class: "btn btn-primary" %>
    </div>
    <% end %>
  </div>
  <div>
  <%if @custom_data %>
    <% @custom_data.each do |c|%>
      <% @custom_id=c.id %>
      <span class="badge text-bg-info"><%= c.full_name %></span>
    <% end %>
  <% end %>
  </div> 
</div>
