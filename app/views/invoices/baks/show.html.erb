<div class="container">
<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
      <div class="card-header">
        <%=link_to "Volver", invoices_path, class:"btn btn-primary float-end" %>
        <%=link_to "Modificar", edit_invoice_path(@invoice), class:"btn btn-warning float-end" %> 
        <%= button_to "Eliminar", @invoices, method: :delete, class:"btn btn-danger float-end"%>
        
        <h4 class="card-title">Artículos</h4>
      </div>
			<div class="card-body">
				<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
	  <th scope="col">Producto</th>
    <th scope="col">Precio</th>
      <th scope="col">Cantidad</th>
      <th scope="col">Ajuste</th>
      <th scope="col">Estilista</th>
	  <th scope="col">No.de factura</th>
	  
    </tr>
  </thead>
  <tbody>

<% if @invoice.order_items.any? %>
	<ul>
		<% @invoice.order_items.each do |item| %>
      <tr>
      <td><%= item.product.name %></td>
      <td><%= item.product.price  %></td>
      <td><%= item.quantity  %></td>
      <td><%= item.adjustment  %></td>
      <td><%= item.stylist.name  %></td>
      <td><%= item.invoice_id  %></td>

    </tr>
    <tr>

		
		<% end %>
	</ul>
<% else %>
	<p>no hay Artículos</p>
<% end %>
