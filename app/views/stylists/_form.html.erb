<div class="container">
  <div class="card col-lg-4">
    <div class="card-header">
      Estilista
    </div>
    <div class="card-body">
      <%= form_with(model: stylist) do |form| %>
      <% if stylist.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(stylist.errors.count, "error") %> No se puede guardar este estilista: </h2>

          <ul>
            <% stylist.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row mb-3">
        <%= form.label :dni, "DNI", style: "display: block", class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
          <%= form.text_field :dni, class:"form-control", placeholder:"Documento de identidad" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= form.label :name, "Nombre", style: "display: block", class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
          <%= form.text_field :name, class:"form-control", placeholder:"Nombre y apellido" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= form.label :role, "Rol", style: "display: block", class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
          <%= form.text_field :role, class:"form-control", placeholder:"Cargo o rol" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= form.label :telephone, "TelÃ©fono", style: "display: block", class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
          <%= form.text_field :telephone, class:"form-control", placeholder:"TelÃ©fono" %>
        </div>
      </div>

      <div class="row mb-3">
        <%= form.label :actived, "Activo", style: "display: block", class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
          <%= form.check_box :actived %>
        </div>
      </div>

      <div class="row mb-3">
        <%= form.label :business_id, "Negocio", style: "display: block", class:"col-sm-3 col-form-label" %>
        <div class="col-sm-9">
          <%= form.text_field :business_id, class:"form-control", placeholder:"ID Negocio" %>
        </div>
      </div>
        <%= link_to "Regresar", stylists_path, class:"btn btn-outline-secondary" %>
        <%= form.submit "Guardar", class:"btn btn-primary" %>
      </div>
    <% end %>    
    </div>
  </div>
</div>
