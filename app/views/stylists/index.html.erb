<div class="container">
<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
      <div class="card-header">
        <%= link_to "Agregar Estilista", new_stylist_path, class:"btn btn-primary float-end" %>
        <h4 class="card-title">Colaboradores</h4>
      </div>
			<div class="card-body">
				<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Nombre</th>
							<th>DNI</th>
							<th>Tel√©fono</th>
							<th>Activo</th>
							<th>Rol</th>
							<th>Opciones</th>
						</tr>
					</thead>
					<tbody>

					<%  @stylists.each do |stylist| %>
					<tr class="align-middle">
						<td class="py-1"> 
            <img src="http://via.placeholder.com/36x36" alt="image">
            <%= stylist.name %> </td>
						<td> <%= stylist.dni %></td>
						<td> <%= stylist.telephone %></td>
						<td> <%= stylist.actived %> </td>
						<td> <%= stylist.role%></td>
						<td> 
              <button type="button" class="btn btn-info">
							<%= link_to "", edit_stylist_path(stylist), class:"bi bi-pencil text-white" %> 
              </button>
              <button type="button" class="btn btn-warning">
							<%= link_to "", edit_stylist_path(stylist), class:"bi bi-plug text-white" %> 
              </button>
              <button type="button" class="btn btn-danger">
							<%= link_to "", stylist_path(stylist),  data: {turbo_method: :delete, 
								turbo_confirm: "Are you sure?" }, class:"bi bi-trash text-white" %> 
								</button>
            </td>
					</tr>
				<% end %>

				</tbody>
			</table>
		</div>
	</div>
</div>
</div>