<div id="<%= dom_id payment %>">
<div class="container d-flex justify-center">
  <div class="card col-lg-12">
    <div class="card-header">
      Pago
    </div>
    <div class="card-body">
      <p>
        <strong>Fecha: </strong><%= payment.date %>
      </p>
      <p>
        <strong>Factura: </strong><%= payment.invoice_id %>
      </p>
      <p>
        <strong>Cantidad: </strong><%= payment.value %>
      </p>
      <p>
        <strong>Tipo de pago: </strong><%= payment.kind %>
      </p>

      <p>
        <strong>Nota: </strong><%= payment.note %>
      </p>
      </div>
    </div>
  </div>
</div>
